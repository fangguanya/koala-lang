package test;

import "koala/io";
import an "test/animal";

class Dog : an.Animal {
	color string;

	func __init__(name string, age int, color string) {
		self.color = color;
		self.name = name;
		self.age = age;
	}

	func SayHello() {
		io.Println("Dog: SayHello");
	}

	func DogFunc() {
		io.Println("Dog Wang:", name, color);
	}
}

class Cat : an.Animal {
	func SayHello() {
		io.Println("Cat: SayHello");
		name = "CAT";
		age = 123;
	}
}

func Main(args []string) {
	var name = "DOG";
	var age = 122;

	var animal an.Animal = Dog(name, age, "BLACK");
	animal.SayHello();
	animal.AnimalFunc();

	animal = Cat();
	animal.SayHello();
	animal.AnimalFunc();

	animal = an.Animal("Animal", 200);
	animal.SayHello();
	animal.AnimalFunc();
}
