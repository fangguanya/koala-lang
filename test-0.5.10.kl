package test;

import "koala/io";

class Animal {
	name string;
	age int;

	func __init__(name string, _age int) {
		self.name = name;
		age = _age;
	}

	func SayHello() {
		io.Println("call Animal SayHello");
	}

	func AnimalFunc() {
		io.Println("Animal:", name, age);
	}
}

