	This test is for class statement
 */
package test;

import "koala/io";

class Animal {
	name string;
	age int;

	func __init__(name string, _age int) {
		io.Println("Animal:", name, _age);
		self.name = name;
		age = _age;
	}

	func SayHello() {
		io.Println("Animal: SayHello");
	}

	func AnimalFunc() {
		io.Println("Animal:", name, age);
	}
}

class Dog : Animal {
	color string;

	func __init__(name string, age int, color string) {
		super(name, age); //-->> super.__init__(name, age)
		io.Println("Dog constructor");
		self.color = color;
		self.name = name;
		self.age = age;
	}

	func SayHello() {
		io.Println("Dog: SayHello");
		io.Println("Dog Wang:", name, age, color);
		super.SayHello();
	}

	func DogFunc() {
		io.Println("Dog Wang:", name, color);
	}
}

class Cat : Animal {
	func SayHello() {
		io.Println("Cat: SayHello");
		name = "CAT";
		age = 123;
	}
}

func Main(args []string) {
	var name = "DOG";
	var age = 122;

	var animal Animal = Dog(name, age, "Black");
	animal.SayHello();
	animal.AnimalFunc();

	animal = Cat();
	animal.SayHello();
	animal.AnimalFunc();
}
